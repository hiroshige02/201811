<div class="session-visual3">

  <div class="baloon center">
    <div class="baloon-contents">

    <h4 class="session-title"><日時></h4>
    <p class="syousai">
    <%= @event.year %>年<%= @event.month %>月<%= @event.start_time.day %>日
    <%= @event.start_time.hour %>：00<span>〜</span><%= @event.finish_time.hour %>：00<br><br>
    </p>
    <h4 class="session-title"><タイトル></h4>
    <h2 class="bold"><%= @event.title %></h2><br>
    <h4 class="session-title"><主催></h4>
    <p class="syousai non-deco"> <%= mail_to "#{@event.regist_user.email}", "#{@event.regist_user.regist_name}さん", :cc => "", class:"non-deco", :subject => "test mail" %></p><br>
    <h4 class="session-title"><詳細></h4>

    <%= attachment_image_tag @event, :event_image, :fill, 150, 150, class:"event-image block" %>
    <p class="syousai"><%= @event.content %></p>


    <%= form_for @event, url: approve_admin_event_path, method: :get do |f| %>
    <%#= form_for [:admin, @event] do |f| %>
    <div class="column-top center">
      <%= f.text_area :admin_message %>
    </div>
      <div class="column-top">
        <div class="center">
        <%= submit_tag "承認する", class:"square_btn green center" %>
        <%= submit_tag "否認する", name: "sayno", class:"square_btn red" %>
        </div>
　　   </div>
    <% end %>

    </div>
  </div>


</div>
