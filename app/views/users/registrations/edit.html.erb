<div class="session-visual">
  <div class="main-box">
    <div class="account-box">


<h2 class="session-title">一般ユーザー<br>情報編集<br><%#= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <div class="field column-top">
    <%= f.label :"名前 (ニックネーム可)", class:"session-columns" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field column-top">
    <%= f.label :Eメールアドレス, class:"session-columns" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field column-top">
    <%= f.label :新しいパスワード, class:"session-columns" %><br><i class="session-columns">(変更を希望しない場合は空にしてください)</i><br />
    <em class="session-columns"><%= @minimum_password_length %>文字以上入力が必要です</em><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      
    <% end %>
  </div>

  <div class="field column-top">
    <%= f.label :"新しいパスワード(確認用)", class:"session-columns" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field column-top">
    <%= f.label :現在お使いのパスワード, class:"session-columns" %> <i class="session-columns">(変更確認のため入力が必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

 <div class="column-top">
    <%= f.submit "更新", class:"square_btn" %>
    <%= link_to "戻る", :back, class:"square_btn" %>
  </div>
<% end %>

<div class="column-top">
  <%= link_to "ログアウト(メンテ用)", destroy_user_session_path, method: :delete  %>
<%= link_to "退会の方はこちら", taikai_path(current_user.id), class:"square_taikai_btn" %>
<%#= link_to "退会の方はこちら", taikai_path(current_user.id), data: { confirm: "本当によろしいですか?" }, method: :delete %></p>

    </div>
  </div>
</div>